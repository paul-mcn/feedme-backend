{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "ESNext",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "src/schemas/*": [
        "schemas/*"
      ],
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
}